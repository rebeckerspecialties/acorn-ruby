{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "importHelpers": true,
    "rootDir": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2022"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "lib": ["ES2022"],
  "exclude": ["node_modules", "tmp"],
  "include": ["src/**/*.ts"]
}
